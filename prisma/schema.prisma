generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int        @id @default(autoincrement())
  name     String
  login    String     @unique
  password String
  workouts Workouts[]
}

model Exercises {
  id               Int                 @id @default(autoincrement())
  name             String
  muscleGroup      String              @map("muscle_group")
  workoutExercises Workout_Exercises[]
}

model Workouts {
  id               Int                 @id @default(autoincrement())
  user             Users               @relation(fields: [userId], references: [id])
  userId           Int                 @map("user_id")
  name             String
  description      String
  workoutExercises Workout_Exercises[]
}

model Workout_Exercises {
  id         Int       @id @default(autoincrement())
  date       DateTime
  workout    Workouts  @relation(fields: [workoutId], references: [id])
  workoutId  Int       @map("workout_id")
  exercise   Exercises @relation(fields: [exerciseId], references: [id])
  exerciseId Int       @map("exercise_id")
  sets       Int
  reps       Int
  weight     Int
}
